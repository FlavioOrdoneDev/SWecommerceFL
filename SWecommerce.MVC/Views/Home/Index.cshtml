@model  List<SWecommerce.Dominio.BuscarProdutosDominio>

<link href="~/ECommerceCSS/PedidoIndexListarCSS.css" rel="stylesheet" />

<h3>Produtos</h3>

<div id="produto">
    <section id="produto_cabecalho">
        <h1>@ViewBag.Title</h1>
        <div class="row">
            <div class="col-md-8">
                <h4>Confira nossos produtos em promoção.</h4>
            </div>
            <div class="col-md-4">
                 <a href="@Url.Action("Pedido","Home")" class="btn-sm btn-primary btn-pedido btn-lg" role="button"><i class="glyphicon glyphicon-shopping-cart"></i> Ir para o Carrinho</a>
             </div>
          </div>
    </section>
    <section id="produto_conteudo">
        <div class="row">
            <div class="col-md-12">
                    <table id="grid_produto" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Preço</th>
                                <th>Promoção</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.Id">
                                    <td  nome="@item.Nome">@item.Nome</td>
                                    <td class="moeda" preco="@item.Preco">@item.Preco</td>
                                    <td promocao="@item.TipoPromocao">@item.TipoPromocao</td>
                                    <td>
                                        <a class="btn-sm btn-success btn-adicionar" role="button"><i class="glyphicon glyphicon-shopping-cart"></i> Adicionar</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </section>
</div>

<div id="modalDadosProduto"></div>

<script src="~/ECommerceScripts/Pedido/ProdutoListarIndexEventoDosControles.js"></script>


